<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.open.zcool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.GET_TOP_ACTIVITY_INFO" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <application
        android:name="com.open.zcool.application.ZCoolApplication"
       android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        
        <!-- webview -->
        <activity
            android:name="com.open.zcool.activity.ZcoolWebViewActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/zcool_webview_desp" >
        </activity>
        <!-- 站酷精选图片viewpager -->
        <activity
            android:name="com.open.zcool.activity.IndexFocusFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/index_focus_f_desp" >
        </activity>
        <!-- 列表main list -->
        <activity
            android:name="com.open.zcool.activity.IndexMainPullListFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/index_main_list_f_desp" >
        </activity>
        <!-- 推荐/活跃 设计师 -->
        <activity
            android:name="com.open.zcool.activity.DesignerListFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/designer_list_f_desp" >
        </activity>
        <!-- Indicator设计师 -->
        <activity
            android:name="com.open.zcool.activity.DesignerIndicatorFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/designer_indicator_f_desp"
            android:theme="@style/Theme.PageIndicatorDefaults"  >
        </activity>
         <!-- 推荐职位  找设计师，用站酷 -->
        <activity
            android:name="com.open.zcool.activity.RecommendJobListFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/recommend_job_f_desp"
            >
        </activity>
         <!-- 推荐 最新 Indicator -->
        <activity
            android:name="com.open.zcool.activity.RecommendJobIndicatorListFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/recommend_job_indicator_f_desp"
            android:theme="@style/Theme.PageIndicatorDefaults"
            >
        </activity>
        <!--热门搜索-->
        <activity
            android:name="com.open.zcool.activity.SearchHotFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/search_hot_f_desp"
            >
        </activity>
        <!--搜索keys结果-->
        <activity
            android:name="com.open.zcool.activity.SearchPostFragmentActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/search_post_f_desp"
            >
        </activity>
         <!-- 所有类列表 -->
        <activity
            android:name="com.open.zcool.activity.ZcoolALLActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:description="@string/zcool_all_desp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
