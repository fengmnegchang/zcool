<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffba00"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#ffba00" >

        <ImageButton
            android:id="@+id/id_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/showright_selector"
            android:onClick="showLeftMenu" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="站酷"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/id_iv_right"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search_100x100_day"
            android:onClick="toSearch" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1" />

</LinearLayout>