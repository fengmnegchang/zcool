<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/text_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="PRE"
        android:textSize="11dp" />

    <Button
        android:id="@+id/text_fisrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_pre"
        android:text="1"
        android:textSize="11dp" />

    <Button
        android:id="@+id/text_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1" />

    <Button
        android:id="@+id/text_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_next"
        android:text="100"
        android:textSize="11dp" />

    <Button
        android:id="@+id/text_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="NEXT"
        android:textSize="11dp" />

    <antistatic.spinnerwheel.WheelVerticalView
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_next"
        android:layout_height="200dp" />

</RelativeLayout>